<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="151dp"

        android:id="@+id/picOnTop"
        android:scaleType="fitXY"
        android:layout_weight="0.10"
        android:background="@drawable/picture2" />

    <Button
        android:layout_width="71dp"
        android:layout_height="70dp"
        android:id="@+id/book"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/picture3"
        android:onClick="showIndex"/>

    <TextView
        android:text="آیین نامه"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="20dp" />

    <Button
        android:layout_width="71dp"
        android:layout_height="70dp"
        android:id="@+id/quiz"
        android:layout_weight="0.10"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/picture5"
        android:onClick="showQuiz"
        />

    <TextView
        android:text="آزمون"
        android:textSize="20dp"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />


</LinearLayout>